{
    "name": "hnhdigital-os/laravel-html-generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Rocco Howard",
            "email": "rocco@hnh.digital"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/support": "^5.8|^6.0",
        "airmanbzh/php-html-generator": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "phpmd/phpmd" : "~2.0",
        "squizlabs/php_codesniffer" : "~3.0"
    },
    "support": {
        "issues": "https://github.com/hnhdigital-os/laravel-html-generator/issues"
    },
    "autoload": {
        "psr-4": {
            "Bluora\\LaravelHtmlGenerator\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bluora\\LaravelHtmlGenerator\\BladeDirectiveServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "composer phpunit & composer phpcs & composer phpmd"
        ],
        "phpunit": [
            "phpunit"
        ],
        "phpcs": [
            "phpcs -p -s --standard=PSR2 ./src ./tests"
        ],
        "phpmd": [
            "phpmd ./src text phpmd.xml"
        ]
    },
    "prefer-stable": true,
    "minimum-stability" : "dev"
}
